<Window x:Class="library.xaml.EditBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library.xaml"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Изменение книги" Height="450" Width="350" Icon="agenda.png">
    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="30,118,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Автор" HorizontalAlignment="Left" Margin="56,170,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Жанр" HorizontalAlignment="Left" Margin="60,217,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Издательство" HorizontalAlignment="Left" Margin="2,267,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="23" Margin="147,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtAuthor" HorizontalAlignment="Left" Height="23" Margin="147,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtStyle" HorizontalAlignment="Left" Height="23" Margin="147,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtPublish" HorizontalAlignment="Left" Height="23" Margin="147,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="90,355,0,0" VerticalAlignment="Top" Width="160" Height="30" Click="Save"/>
    </Grid>
</Window>
