<Window x:Class="library.AddEmps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавление/изменение сотрудника" Height="450" Width="350" Icon="agenda.png">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="52,26,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="25,78,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="60,136,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="25,186,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtLog" HorizontalAlignment="Left" Height="23" Margin="147,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtPass" HorizontalAlignment="Left" Height="23" Margin="147,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="147,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtLast" HorizontalAlignment="Left" Height="23" Margin="147,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="90,355,0,0" VerticalAlignment="Top" Width="160" Height="30" Click="Save"/>
        <Label Content="Должность" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Отдел" HorizontalAlignment="Left" Margin="47,292,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtPost" HorizontalAlignment="Left" Height="23" Margin="147,250,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtDept" HorizontalAlignment="Left" Height="23" Margin="147,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
