<Window x:Class="library.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавление/изменение читателя" Height="450" Width="350" Icon="agenda.png">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="52,118,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="25,170,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Имя" HorizontalAlignment="Left" Margin="60,216,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Фамилия" HorizontalAlignment="Left" Margin="25,266,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtLog" HorizontalAlignment="Left" Height="23" Margin="147,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtPass" HorizontalAlignment="Left" Height="23" Margin="147,178,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="147,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <TextBox x:Name="txtLast" HorizontalAlignment="Left" Height="23" Margin="147,274,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="90,355,0,0" VerticalAlignment="Top" Width="160" Height="30" Click="Save"/>
    </Grid>
</Window>
